<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.aylin.ogrencievi2.LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtUserEmail"
        android:layout_alignLeft="@+id/edtUserEmail"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edtUserEmail"
        android:layout_alignStart="@+id/edtUserEmail"
        android:layout_marginTop="60dp"
        android:text="Öğrenci Evi"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold" />

    <EditText
        android:id="@+id/edtUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Mail Giriniz"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/colorPrimary" />

    <EditText
        android:id="@+id/edtUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtUserEmail"
        android:layout_alignStart="@+id/edtUserEmail"
        android:layout_below="@+id/edtUserEmail"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Şifre Giriniz"
        android:inputType="textPassword"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtUserPassword"
        android:layout_alignLeft="@+id/edtUserPassword"
        android:layout_alignRight="@+id/edtUserPassword"
        android:layout_alignStart="@+id/edtUserPassword"
        android:layout_below="@+id/edtUserPassword"
        android:layout_marginTop="44dp"
        android:background="@color/colorPrimary"
        android:text="GİRİŞ"
        android:textColor="@android:color/white"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/btnStartRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:text="KAYIT OL"
        android:textColor="@android:color/white"
        android:textColorLink="@color/colorPrimary" />

</RelativeLayout>
